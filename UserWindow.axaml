<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.UserWindow"
        x:CompileBindings="false"
        Title="UserWindow">
    <DockPanel>
		<StackPanel DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid ColumnDefinitions="2* * * *" Grid.Column="1">
                    <Button Content="Logout" Click="LogoutButton_Click" Grid.Column="0"/>
                    <TextBlock Text="Price: " Grid.Column="1"/>
                    <TextBlock Text="0" Grid.Column="2" x:Name="FinalPriceTextBlock"/>
                    <Button Content="Buy" Click="BuyButton_Click" Grid.Column="3" HorizontalAlignment="Right"/>
                </Grid>
        </StackPanel>
        <Border>
			<ListBox x:Name="ListBoxProducts">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<Border>
							<Grid ColumnDefinitions="* *">
								<StackPanel Grid.Column="0">
									<TextBlock Text="{Binding Name}"/>
                                    <TextBlock Text="{Binding Price}"/>
                                    <TextBlock Text="{Binding Manufacturer.Name}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <Grid ColumnDefinitions="* *">
										<Button Content="Add" Click="AddProductButton_Click" Grid.Column="0"/>
                                        <Button Content="Remove" Click="RemoveProductButton_Click" Grid.Column="1"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </DockPanel>
</Window>
