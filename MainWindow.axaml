<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.MainWindow"
        Background="Bisque"
        Title="AvaloniaApplication1">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Spacing="10">
		<TextBox Watermark="login" x:Name="TextBoxLogin" Width="300"/>
        <TextBox Watermark="password" x:Name="TextBoxPassword" Width="300"/>
        <TextBlock IsVisible="False" Foreground="Red" Text="Неверный логин или пароль" x:Name="ErrorTextBlock"/>
        <Button Content="Auth" Click="AuthButton_Click" Width="200" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
